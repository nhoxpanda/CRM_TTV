<div class="modal fade bs-modal-lg" id="modal-insert-event" role="document" aria-hidden="true"  ng-controller="itemCtrl">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Sự kiện</h4>
            </div>
            <div class="modal-body" ng-repeat="event in items">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="portlet light bordered">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <a data-toggle="collapse" data-target="#demo-event{{event}}" style="cursor: pointer" class="btn btn-default"><i class="fa fa-plus"></i></a>
                                        <span class="caption-subject bold uppercase font-purple">OPTION {{event}}</span>
                                    </div>
                                    <div class="actions">
                                        <button style="cursor: pointer" class="btn btn-danger" ng-show="$last" ng-click="removeItem()"><i class="fa fa-times"></i></button>
                                    </div>
                                </div>
                                <div class="portlet-body" id="demo-event{{event}}">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label col-lg-2 col-md-2">Công ty</label>
                                                <div class="col-lg-10 col-md-10">
                                                    <input ng-model="event.name" name="tb{{event}}" type="text" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label col-lg-4 col-md-4">Khu vực</label>
                                                <div class="col-lg-8 col-md-8">
                                                    <input ng-model="event.name" name="tb{{event}}" type="text" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-lg-4 col-md-4">Điện thoại</label>
                                                <div class="col-lg-8 col-md-8">
                                                    <input ng-model="event.name" name="tb{{event}}" type="text" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-lg-4 col-md-4">File</label>
                                                <div class="col-lg-8 col-md-8">
                                                    <input ng-model="event.name" name="file{{event}}" type="file" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label col-lg-4 col-md-4">Địa chỉ</label>
                                                <div class="col-lg-8 col-md-8">
                                                    <input ng-model="event.name" name="tb{{event}}" type="text" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-lg-4 col-md-4">Email</label>
                                                <div class="col-lg-8 col-md-8">
                                                    <input ng-model="event.name" name="tb{{event}}" type="text" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-lg-4 col-md-4">Tổng giá</label>
                                                <div class="col-lg-8 col-md-8">
                                                    <input ng-model="event.name" name="tb{{event}}" type="text" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div align="center" style="margin-bottom: 20px">
                <button type="button" class="btn btn-success" ng-click="addNewItem()">Thêm option</button>
                <button type="button" class="btn blue" id="btnLuuFunction">Lưu</button>
                <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>