@model IEnumerable<CRM_TTV.tbCategory>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    CRM_TTV.Search.tbCategorySearchModel jobSearch = new CRM_TTV.Search.tbCategorySearchModel();
    if (TempData["sModel"] != null)
    {
        jobSearch = (CRM_TTV.Search.tbCategorySearchModel)TempData["sModel"];
    }
}
<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>INDEX</h1>
        </div>
        <!-- END PAGE TITLE -->

    </div>
    <!-- END PAGE HEAD-->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="index.html">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">Page Layouts</span>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-default" onclick="location.reload(true);"><i class="fa fa-refresh"></i>&nbsp;Nạp</button>
                @*@Html.ActionLink("Create New", "Create", null, new { id = "btnCreate" },new { @class= "btn btn-warning", title="deo co" })*@

                <button class="btn btn-primary" data-toggle="modal" controller="tbCategories" id="btnCreate" href="#modal"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                <button class="btn btn-warning" id="btnEdit" controller="tbCategories" data-toggle="modal" href="#modal"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                <button class="btn btn-danger" id="btnRemove" controller="tbCategories" onclick="confirm('Bạn có chắc chắn xóa không?');"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
                <a class="btn green" data-toggle="modal" href="#modal-import-customer"><i class="icon-action-redo"></i>&nbsp;Import</a>
                <label class="btn btn-info fileContainer">
                    <a><i class="icon-action-undo"></i>&nbsp;<input type="file" name="Export" class="form-control" />&nbsp;Export</a>
                </label>
                <button class="btn grey-cascade" controller="tbCategories" data-toggle="modal" id="btnSearch"><i class="fa fa-search"></i>&nbsp;Search</button>
                <!--<button class="btn red"><i class="fa fa-cog"></i>&nbsp;Xử lý</button>-->
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="table-responsive table-custom-format">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th id="ID" hidden="hidden"></th>
                                    <th class="table-checkbox">
                                        <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                                    </th>
                                    <th id="name">
                                        @Html.DisplayNameFor(model => model.name)
                                        <a id="sortasc1" onclick="clickSortASC(1)" class="icon-sort-table"><i class="fa fa-sort-asc"></i></a>
                                        <a id="sortdesc1" onclick="clickSortDESC(1)" class="icon-sort-table"><i class="fa fa-sort-desc"></i></a>
                                    </th>
                                    <th id="sort">
                                        @Html.DisplayNameFor(model => model.sort)
                                        <a id="sortasc2" onclick="clickSortASC(2)" class="icon-sort-table"><i class="fa fa-sort-asc"></i></a>
                                        <a id="sortdesc2" onclick="clickSortDESC(2)" class="icon-sort-table"><i class="fa fa-sort-desc"></i></a>
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tbCategoryType.name)
                                        <a id="sortasc3" onclick="clickSortASC(3)" class="icon-sort-table"><i class="fa fa-sort-asc"></i></a>
                                        <a id="sortdesc3" onclick="clickSortDESC(3)" class="icon-sort-table"><i class="fa fa-sort-desc"></i></a>
                                    </th>

                            </thead>

                            <tbody id='rootList'>
                                <tr id="searchModel">
                                    <td></td>
                                    <td>
                                        <input type="text" name="name" id="name" value="@jobSearch.Name" class="form-control" />
                                    </td>
                                    <td>
                                        <input type="text" name="sort" id="sort" value="@jobSearch.type" class="form-control" />
                                    </td>
                                    <td>
                                        <select name="type" class="form-control input-sm input-xsmall input-inline" id="sort-data">
                                            <option>ALL</option>
                                            <option value="1">Đang học</option>
                                            <option value="3">Nghỉ học</option>
                                            <option value="5">Tạm ngưng</option>
                                        </select>
                                    </td>
                                </tr>


                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><input id="@item.idCategory" type="checkbox" name="cb" onclick="CheckSelect()" /></td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.sort)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tbCategoryType.name)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Raw(ViewBag.Paging)
                </div>
            </div>
        </div>
    </div>

    @*Pupup modal inset update delete*@
    <div class="modal fade bs-modal-lg" id="modal" role="document" aria-hidden="true"></div>


    <!-- END PAGE BASE CONTENT -->

</div>