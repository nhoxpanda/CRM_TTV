@model IEnumerable<CRM_TTV.tbClass>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>QUẢN LÝ LỚP HỌC</h1>
        </div>
        <!-- END PAGE TITLE -->

    </div>
    <!-- END PAGE HEAD-->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="index.html">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">Page Layouts</span>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-default" onclick="location.reload(true);"><i class="fa fa-refresh"></i>&nbsp;Nạp</button>
                @*@Html.ActionLink("Create New", "Create", null, new { id = "btnCreate" },new { @class= "btn btn-warning", title="deo co" })*@

                <button class="btn btn-primary" data-toggle="modal" controller="Classesxxxx" id="btnCreate" href="#modal"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                <button class="btn btn-warning" id="btnEdit" controller="Classesxxxx" data-toggle="modal" href="#modal"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                <button class="btn btn-danger" id="btnRemove" controller="Classesxxxx" onclick="confirm('Bạn có chắc chắn xóa không?');"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
                <button class="btn btn-danger" id="btnAddStudent" action="AddStudent" controller="Classesxxxx"><i class="fa fa-remove" title="thêm or xóa học viên"></i>&nbsp;Học viên</button>
                <button class="btn btn-danger" id="btnAddStudent" action="AddStudent" controller="Classesxxxx"><i class="fa fa-print" title="thêm or xóa học viên"></i>&nbsp;In danh sách HV</button>
                <a class="btn green" data-toggle="modal" href="#modal-import-customer"><i class="icon-action-redo"></i>&nbsp;Import</a>
                <a class="btn green" data-toggle="modal" href="#modal-import-customer"><i class="fa fa-address-book-o"></i>&nbsp;Điểm danh</a>
                <label class="btn btn-info fileContainer">
                    <a><i class="icon-action-undo"></i>&nbsp;<input type="file" name="Export" class="form-control" />&nbsp;Export</a>
                </label>
                <button class="btn grey-cascade" controller="Classesxxxx" data-toggle="modal" id="btnSearch"><i class="fa fa-search"></i>&nbsp;Search</button>
                <!--<button class="btn red"><i class="fa fa-cog"></i>&nbsp;Xử lý</button>-->
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th id="ID" hidden="hidden"></th>
                                <th class="table-checkbox">
                                    <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                                </th>
                                <th id="name">
                                    Tên lớp
                                </th>
                                <th id="note">
                                    Thời gian học
                                </th>
                                <th id="sort">
                                    Ưu đãi
                                </th>
                                <th>
                                    Ghi chú
                                </th>
                                <th>
                                    Chi nhánh
                                </th>
                                <th>
                                    Chương trình
                                </th>
                                <th>
                                    Cấp độ
                                </th>
                                <th>
                                    Gói dịch vụ
                                </th>
                                <th>
                                    Môn học
                                </th>
                                <th>
                                    Chuyên ngành
                                </th>

                        </thead>

                        <tbody id='rootList'>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td><input id="@item.idClass" type="checkbox" name="cb" onclick="CheckSelect()" /></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.timeStudy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.saveOff)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.note)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbCompany.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbEducation.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbLever.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbScience.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbServicePack.listIdSubject)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbSpecialized.name)
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
                @Html.Raw(ViewBag.Paging)
            </div>

        </div>

        <div class="portlet light bordered">
            <div class="form-horizontal">
                <div class="tabbable-custom" id="tab-insert-customer">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#thongtincoban" data-toggle="tab">Thông tin</a>
                        </li>
                        <li>
                            <a href="#visapassport" data-toggle="tab">Danh sách học viên</a>
                        </li>
                        <li>
                            <a href="#thongtinkhac" data-toggle="tab">Thời khóa biểu</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="thongtincoban">
                            <div class="row">
                                <div class="col-md-6">
                                    Info
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="visapassport">
                            <div class="row">
                                <div class="col-md-6">
                                    cmnd
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="thongtinkhac">
                            <div class="row">
                                <div class="col-md-6">
                                    info orther
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    @*Pupup modal inset update delete*@
    <div class="modal fade bs-modal-lg" id="modal" role="document" aria-hidden="true"></div>
    

    <!-- END PAGE BASE CONTENT -->
</div>
