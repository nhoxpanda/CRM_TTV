@using CRM_TTV.Models
@model tbCompanyContact

<div id="modal-insert-contact" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm thông tin liên hệ</h4>
            </div>
            @using (Ajax.BeginForm("CreateContact", "Companies", null, new AjaxOptions { OnSuccess = "OnSuccess", OnFailure = "OnFailure", UpdateTargetId = "Contacts" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12 margintop10">
                                <div class="table-responsive table-custom-format">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="idCompany" id="idCompany" value="@ViewBag.idCompany" />
                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="form-group">
                                            <label class="control-label col-md-4">Họ tên</label>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-4">Điện thoại</label>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.phone, new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-4">Chức vụ</label>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.position, new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-4">Ghi chú</label>
                                            <div class="col-md-8">
                                                @Html.TextAreaFor(model => model.note, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn yellow" type="submit"><i class="fa fa-floppy-o"></i>&nbsp;Lưu</button>
                    <button class="btn grey" data-dismiss="modal"><i class="fa fa-ban"></i>&nbsp;Đóng</button>
                </div>
            }
        </div>
    </div>
</div>
