@model IEnumerable<CRM_TTV.tbCompany>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>QUẢN LÝ CHI NHÁNH</h1>
        </div>
        <!-- END PAGE TITLE -->

    </div>
    <!-- END PAGE HEAD-->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="index.html">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">Page Layouts</span>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-default" onclick="location.reload(true);"><i class="fa fa-refresh"></i>&nbsp;Nạp</button>
                @*@Html.ActionLink("Create New", "Create", null, new { id = "btnCreate" },new { @class= "btn btn-warning", title="deo co" })*@
                <button class="btn btn-primary" data-toggle="modal" controller="Companies" id="btnCreate" href="#modal"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                <button class="btn btn-warning" id="btnEdit" controller="Companies" data-toggle="modal" href="#modal"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                <button class="btn btn-danger" id="btnRemove" controller="Companies" onclick="confirm('Bạn có chắc chắn xóa không?');"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
                <a class="btn green" data-toggle="modal" href="#modal-import-customer"><i class="icon-action-redo"></i>&nbsp;Import</a>
                <label class="btn btn-info fileContainer">
                    <a><i class="icon-action-undo"></i>&nbsp;<input type="file" name="Export" class="form-control" />&nbsp;Export</a>
                </label>
                <button class="btn grey-cascade" controller="Companies" data-toggle="modal" id="btnSearch"><i class="fa fa-search"></i>&nbsp;Search</button>
                <!--<button class="btn red"><i class="fa fa-cog"></i>&nbsp;Xử lý</button>-->
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="table-responsive table-custom-format">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th id="ID" hidden="hidden"></th>
                                    <th class="table-checkbox">
                                        <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                                    </th>

                                    <th id="name">
                                        Tên chi nhánh
                                    </th>
                                    <th id="taxCode">
                                        Mã số thuế
                                    </th>
                                    <th id="address">
                                        Địa chỉ
                                    </th>
                                    <th id="phone">
                                        Điện thoại
                                    </th>
                                    <th id="email">
                                        Email
                                    </th>
                                    <th id="website">
                                        Website
                                    </th>
                                    <th id="createDate">
                                        Ngày nhập
                                    </th>
                            </thead>

                            <tbody id='rootList'>
                                @*<tr id="searchModel">

                                        <td></td>
                                        <td>
                                            <input type="text" name="name" id="name" value="@ds.Name" class="form-control" />
                                        </td>
                                        <td>
                                            <input type="text" name="sort" id="sort" value="@ds.type" class="form-control" />
                                        </td>
                                        <td>
                                            <select name="type" class="form-control input-sm input-xsmall input-inline" id="sort-data">
                                                <option>ALL</option>
                                                <option value="1">Đang học</option>
                                                <option value="3">Nghỉ học</option>
                                                <option value="5">Tạm ngưng</option>
                                            </select>
                                        <td></td>
                                    </tr>*@


                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><input id="@item.idCompany" type="checkbox" name="cb" onclick="CheckSelect()" /></td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.taxCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.phone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.website)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.createDate, "{dd/MM/yyyy}")
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.tbCompany2.name)
                                        </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Raw(ViewBag.Paging)
                </div>
            </div>
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="tabbable-custom" id="tabbable-custom">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#Details" data-toggle="tab" id="tabthongtin">Thông tin</a>
                            </li>
                            <li>
                                <a href="#Contacts" data-toggle="tab" id="tablienhe">Liên hệ</a>
                            </li>
                            <li>
                                <a href="#Documents" data-toggle="tab" id="tabhoso">Hồ sơ</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="Details" data-id="Details">
                            </div>
                            <div class="tab-pane" id="Contacts" data-id="Contacts">
                            </div>
                            <div class="tab-pane" id="Documents" data-id="Documents">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Pupup modal inset update delete*@
    <div class="modal fade bs-modal-lg" id="modal" role="document" aria-hidden="true"></div>
</div>
<div id="popupData"></div>