@model IEnumerable<CRM_TTV.tbSpecialized>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>QUẢN LÝ CHUYÊN NGHÀNH</h1>
        </div>
        <!-- END PAGE TITLE -->

    </div>
    <!-- END PAGE HEAD-->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="index.html">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">Page Layouts</span>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-default" onclick="location.reload(true);"><i class="fa fa-refresh"></i>&nbsp;Nạp</button>
                @*@Html.ActionLink("Create New", "Create", null, new { id = "btnCreate" },new { @class= "btn btn-warning", title="deo co" })*@

                <button class="btn btn-primary" data-toggle="modal" controller="Specializeds" id="btnCreate" href="#modal"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                <button class="btn btn-warning" id="btnEdit" controller="Specializeds" data-toggle="modal" href="#modal"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                <button class="btn btn-danger" id="btnRemove" controller="Specializeds" onclick="confirm('Bạn có chắc chắn xóa không?');"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
                <a class="btn green" data-toggle="modal" href="#modal-import-customer"><i class="icon-action-redo"></i>&nbsp;Import</a>
                <label class="btn btn-info fileContainer">
                    <a><i class="icon-action-undo"></i>&nbsp;<input type="file" name="Export" class="form-control" />&nbsp;Export</a>
                </label>
                <button class="btn grey-cascade" controller="Specializeds" data-toggle="modal" id="btnSearch"><i class="fa fa-search"></i>&nbsp;Search</button>
                <!--<button class="btn red"><i class="fa fa-cog"></i>&nbsp;Xử lý</button>-->
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="table-responsive table-custom-format">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th id="ID" hidden="hidden"></th>
                                    <th class="table-checkbox">
                                        <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                                    </th>
                                    <th>
                                        Chương trình
                                    </th>
                                    <th>
                                        Chuyên ngành
                                    </th>
                                    <th>
                                        Ngày bắt đầu
                                    </th>
                                    <th>
                                        Ngày kết thúc
                                    </th>
                                    <th>
                                        Ghi chú
                                    </th>
                            </thead>

                            <tbody id='rootList'>


                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><input id="@item.idSpecialized" type="checkbox" name="cb" onclick="CheckSelect()" /></td>
                                        <td>
                                           @(item.tbEducation != null ? item.tbEducation.name : "")
                                        </td>
                                        <td>
                                            @item.name
                                        </td>
                                        <td>
                                            @string.Format("{0:dd-MM-yyyy}", item.startDate)
                                        </td>
                                        <td>
                                            @string.Format("{0:dd-MM-yyyy}", item.endDate)
                                        </td>
                                        <td>
                                            @item.note
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    @Html.Raw(ViewBag.Paging)
                </div>
            </div>
        </div>
    </div>

    @*Pupup modal inset update delete*@
    <div class="modal fade bs-modal-lg" id="modal" role="document" aria-hidden="true"></div>
    

    <!-- END PAGE BASE CONTENT -->

</div>
