@model IEnumerable<CRM_TTV.tbCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";CRM_TTV.Search.CategorySearchModel jobSearch = new CRM_TTV.Search.CategorySearchModel();if (TempData["sModel"] != null){jobSearch = (CRM_TTV.Search.CategorySearchModel)TempData["sModel"];}
}

<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>QUẢN LÝ LOẠI HỢP ĐỒNG LAO ĐỘNG</h1>
        </div>
        <!-- END PAGE TITLE -->

    </div>
    <!-- END PAGE HEAD-->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="index.html">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">Page Layouts</span>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-default" onclick="location.reload(true);"><i class="fa fa-refresh"></i>&nbsp;Nạp</button>
                <button class="btn btn-primary" data-toggle="modal" controller="CategoryLaborContracts" id="btnCreate" href="#modal"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                <button class="btn btn-warning" id="btnEdit" controller="CategoryLaborContracts" data-toggle="modal" href="#modal"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                <button class="btn btn-danger" id="btnRemove" controller="CategoryLaborContracts" onclick="confirm('Bạn có chắc chắn xóa không?');"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
                <button class="btn grey-cascade" controller="CategoryLaborContracts" data-toggle="modal" id="btnSearch"><i class="fa fa-search"></i>&nbsp;Search</button>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="table-responsive table-custom-format">
                        <table class="table table-striped table-bordered table-hover">

                            <thead>
                                <tr>
                                    <th id="ID" hidden="hidden"></th>
                                    <th class="table-checkbox">
                                        <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.note)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.sort)
                                    </th>
                            </thead>
                            <tbody id='rootList'><tr id="searchModel"><td></td><td><input type="text" name="name" id="name" value="@jobSearch.Name" class="form-control" />         </td>                                    <td>                                        <input type="text" name="sort" id="sort" value="@jobSearch.note" class="form-control" />                                    </td>                                    <td>                                        <input type="text" name="sort" id="sort" value="@jobSearch.sort" class="form-control" />                                    </td>                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><input id="@item.idCategory" type="checkbox" name="cb" onclick="CheckSelect()" /></td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.note)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.sort)
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    @Html.Raw(ViewBag.Paging);
                </div>
            </div>
        </div>
    </div>

    @*Pupup modal inset update delete*@
    <div class="modal fade bs-modal-lg" id="modal" role="document" aria-hidden="true"></div>
    

</div>
