@model IEnumerable<CRM_TTV.tbStudent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>QUẢN LÝ HỌC VIÊN</h1>
        </div>
        <!-- END PAGE TITLE -->

    </div>
    <!-- END PAGE HEAD-->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="index.html">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">Page Layouts</span>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-12">
                NOTE: đăng ký lớp học phân theo nhãn, khóa học....
                <button class="btn btn-default" onclick="location.reload(true);"><i class="fa fa-refresh"></i>&nbsp;Nạp</button>
                <button class="btn btn-primary" data-toggle="modal" controller="Students" id="btnCreate" href="#modal"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                <button class="btn btn-warning" id="btnEdit" controller="Students" data-toggle="modal" href="#modal"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                <button class="btn btn-danger" id="btnRemove" controller="Students" onclick="confirm('Bạn có chắc chắn xóa không?');"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
                <a class="btn green" data-toggle="modal" href="#modal-import-customer"><i class="icon-action-redo"></i>&nbsp;Import</a>
                <label class="btn btn-info fileContainer">
                    <a><i class="icon-action-undo"></i>&nbsp;<input type="file" name="Export" class="form-control" />&nbsp;Export</a>
                </label>
                <button class="btn grey-cascade" controller="Students" data-toggle="modal" id="btnSearch"><i class="fa fa-search"></i>&nbsp;Search</button>
                <button class="btn yellow" controller="Students" data-toggle="modal" id="btnSearch"><i class="fa fa-search"></i>&nbsp;Chuyển lớp</button>
                <!--<button class="btn red"><i class="fa fa-cog"></i>&nbsp;Xử lý</button>-->
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="table-responsive table-custom-format">
                        <table class="table table-striped table-bordered table-hover" id="tableDictionary">

                            <thead>
                                <tr>
                                    <th id="ID" hidden="hidden"></th>
                                    <th class="table-checkbox">
                                        <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                                    </th>
                                    <th>
                                        Mã học viên
                                    </th>
                                    <th>
                                        Học viên
                                    </th>
                                    <th>
                                        Tên lớp
                                    </th>
                                    <th>
                                        Xếp loại
                                    </th>
                                    <th>
                                        Ngày bắt đầu
                                    </th>
                                    <th>
                                        Ngày kết thúc
                                    </th>
                                    <th>
                                        Thời gian còn lại
                                    </th>
                                    <th>
                                        Số ngày nghỉ
                                    </th>
                                    <th>
                                        Trạng thái
                                    </th>

                            </thead>

                            <tbody id='rootList'>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td><input id="@item.idStudent" type="checkbox" name="cb" onclick="CheckSelect()" /></td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbUser.fullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbClass.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbCategory.name)
                                    </td>
                                    <td>
                                        @string.Format("{0:dd-MM-yyyy}", item.startDate)
                                    </td>
                                    <td>
                                        @string.Format("{0:dd-MM-yyyy}", item.endDate)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.timeLess)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.listDateabsent)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.status)
                                    </td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    @Html.Raw(ViewBag.Paging)
                </div>
            </div>
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="tabbable-custom" id="tabbable-custom">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#Details" data-toggle="tab" id="tabthongtin">Thông tin</a>
                            </li>
                            <li>
                                <a href="#Documents" data-toggle="tab" id="tabhoso">Hồ sơ</a>
                            </li>
                            <li>
                                <a href="#userMember" data-toggle="tab" id="tabhoso">Thành viên</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="Details" data-id="Details">
                            </div>
                            <div class="tab-pane" id="Documents" data-id="Documents">
                            </div>
                            <div class="tab-pane" id="userMember" data-id="userMember">
                                <button class="btn btn-primary" data-toggle="modal" controller="Opportunity" id="btnCreate" href="#modal"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                                Học viên được giới thiệu người nhà tham gia các khóa học
                                <br />thêm mới như trong phần cơ hội, parent ID = curent ID
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="popupData"></div>
    @*Pupup modal inset update delete*@
    <div class="modal fade bs-modal-lg" id="modal" role="document" aria-hidden="true"></div>
</div>
