@model MOLUX.Models.web_SocialNetwork

<div id="modal-edit-social" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật</h4>
            </div>
            @using (Html.BeginForm("Update", "SocialNetworkManage", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Icon)
                @Html.HiddenFor(model => model.Name)
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2">Mạng xã hội</label>
                            <div class="col-md-10 col-lg-10">
                                <img src="~/Images/Logo/@Model.Icon" title="@Model.Name" alt="@Model.Name" />
                                <b>@Html.DisplayFor(model => model.Name)</b>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2">Link</label>
                            <div class="col-md-10 col-lg-10">
                                @Html.TextBoxFor(model => model.URL, new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>
