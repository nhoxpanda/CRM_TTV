@model MOLUX.Models.Manufacturer

<div id="modal-edit-manufacturer" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật</h4>
            </div>
            @using (Html.BeginForm("Update", "ManufactureManage", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model => model.RowID)
                @Html.HiddenFor(model => model.Picture)

                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-12 col-lg-12">CODE</label>
                            <div class="col-md-12 col-lg-12">
                                @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12 col-lg-12">Tên thương hiệu</label>
                            <div class="col-md-12 col-lg-12">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12 col-lg-12">Logo</label>
                            <div class="col-md-12 col-lg-12">
                                @Html.TextBoxFor(model => model.Picture, new { @class = "form-control", @type = "file" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>
