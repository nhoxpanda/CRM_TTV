@using MOLUX.Helper
@model MOLUX.Areas.Admin.Models.MenuViewModel

@{
    ViewBag.Title = "Cập nhật chuyên mục tin tức";
}

<section class="content-header">
    <h1>
        Cập nhật chuyên mục tin tức
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Cập nhật chuyên mục tin tức</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("EditCategory", "MenuManage", FormMethod.Post, new { @class = "form-horizontal", role = "form", @dirty = "true" }))
            {
                @Html.HiddenFor(model => model.menu.Id)
                @Html.HiddenFor(model => model.menu.CreatedDate)
                @Html.HiddenFor(model => model.menu.IsDelete)
                @Html.HiddenFor(model => model.menu.IsShow)
                @Html.HiddenFor(model => model.menu.Type)
                <div class="box">
                    <div class="box-header">
                        <div class="callout callout-info lead">
                            <a href="@Url.Action("EditCategory", "MenuManage", new { id = Model.menu.Id })" class="btn btn-primary"><i class="fa fa-refresh"></i>&nbsp;Nạp</a>
                            <button type="submit" class="btn btn-danger" name="btnLuu"><i class="fa fa-save"></i>&nbsp;Lưu</button>
                            <a href="@Url.Action("Category", "MenuManage")" class="btn btn-warning"><i class="fa fa-times"></i>&nbsp;Hủy</a>
                        </div>
                    </div>
                    <div class="box-body" id="data-customer">
                        <div class="form-horizontal">
                            <div class="row" style="margin-top: 20px">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label col-lg-2 col-md-2">Tên category <span class="text-red" style="color:red;">*</span></label>
                                        <div class="col-lg-10 col-md-10">
                                            @Html.TextBoxFor(x => Model.menu.Title, new { @class = "form-control", @placeholder = "Tên category", @maxlength = "50", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-2 col-md-2">Menu</label>
                                        <div class="col-lg-10 col-md-10">
                                            <select name="menu.ParentId" class="form-control">
                                                @foreach (var item in Category.HeaderMenu())
                                                {
                                                    <option value="@item.Id" @(item.Id == Model.menu.ParentId ? "selected" : "")>@item.Title</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                        <label class="control-label col-lg-2 col-md-2">Hiển thị</label>
                                        <div class="col-lg-10 col-md-10">
                                            <input type="radio" name="menu.IsShow" id="IsShowY" @(Model.menu.IsShow == true ? "checked" : "") /> Hiển thị
                                            <input type="radio" name="menu.IsShow" id="IsShowN" @(Model.menu.IsShow == true ? "checked" : "") /> Ẩn
                                        </div>
                                    </div>*@
                                    <div class="form-group">
                                        <label class="control-label col-lg-2 col-md-2">MetaTitle</label>
                                        <div class="col-lg-10 col-md-10">
                                            @Html.TextBoxFor(x => Model.menu.MetaTitle, new { @class = "form-control", @placeholder = "Meta", @maxlength = "50" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-2 col-md-2">MetaDescription</label>
                                        <div class="col-lg-10 col-md-10">
                                            @Html.TextBoxFor(x => Model.menu.MetaDesc, new { @class = "form-control", @placeholder = "Mô tả meta", @maxlength = "50" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-2 col-md-2">Ghi chú</label>
                                        <div class="col-lg-10 col-md-10">
                                            @Html.TextAreaFor(x => Model.menu.Note, new { @class = "form-control", @placeholder = "Ghi chú", @maxlength = "50" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>