@model MOLUX.Models.web_Slider

<div id="modal-insert-manufacturer" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm mới</h4>
            </div>
            @using (Html.BeginForm("Create", "SliderManage", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-12 col-lg-12">Vị trí</label>
                            <div class="col-md-12 col-lg-12">
                                <select class="form-control" name="Type" id="Type" required>
                                    <option value="1">Trang chủ</option>
                                    <option value="2">Trang danh mục sản phẩm</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12 col-lg-12">Hình ảnh</label>
                            <div class="col-md-12 col-lg-12">
                                @Html.TextBoxFor(model => model.Image, new { @class = "form-control", type = "file", @required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12 col-lg-12">Link</label>
                            <div class="col-md-12 col-lg-12">
                                @Html.TextBoxFor(model => model.Link, new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12 col-lg-12">Sắp xếp</label>
                            <div class="col-md-12 col-lg-12">
                                @Html.TextBoxFor(model => model.Orders, new { @class = "form-control", @required = "required", @type = "number" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>
